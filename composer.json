{
    "name": "pagarme/pagarme-magento",
    "description": "Official Magento 1 module to connect to Pagar.me payment provider",
    "type": "magento-module",
    "homepage": "https://github.com/pagarme/pagarme-magento",
    "license": "MIT",
    "authors": [
        {
            "name": "Pagar.me",
            "email": "suporte@pagar.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "PagarMe\\Magento\\Test\\": "tests/acceptance/"
        }
    },
    "require": {
        "php": ">=5.4",
        "pagarme/pagarme-php": "^3.7",
        "guzzlehttp/guzzle": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8",
        "squizlabs/php_codesniffer": "3.*",
        "behat/behat": "~3.3",
        "behat/mink": "^1.7",
        "behat/mink-selenium2-driver": "^1.3",
        "behat/mink-extension": "~2.2",
        "n98/magerun": "@stable"
    },
    "extra": {
        "map": [
            ["app/code/community/PagarMe/*", "app/code/community/PagarMe/"],
            ["app/design/adminhtml/default/default/layout/pagarme/*", "app/design/adminhtml/default/default/layout/pagarme/"],
            ["app/design/adminhtml/default/default/template/pagarme/*", "app/design/adminhtml/default/default/template/pagarme/"],
            ["app/design/frontend/base/default/layout/pagarme/*", "app/design/frontend/base/default/layout/pagarme/"],
            ["app/design/frontend/base/default/template/pagarme/*", "app/design/frontend/base/default/template/pagarme/"],
            ["app/etc/modules/PagarMe_Bowleto.xml", "app/etc/modules/PagarMe_Bowleto.xml"],
            ["app/etc/modules/PagarMe_Core.xml", "app/etc/modules/PagarMe_Core.xml"],
            ["app/etc/modules/PagarMe_CreditCard.xml", "app/etc/modules/PagarMe_CreditCard.xml"],
            ["app/etc/modules/PagarMe_Modal.xml", "app/etc/modules/PagarMe_Modal.xml"],
            ["app/locale/pt_BR/PagarMe_Boleto.csv", "app/locale/pt_BR/PagarMe_Boleto.csv"],
            ["app/locale/pt_BR/PagarMe_Core.csv", "app/locale/pt_BR/PagarMe_Core.csv"],
            ["app/locale/pt_BR/PagarMe_CreditCard.csv", "app/locale/pt_BR/PagarMe_CreditCard.csv"],
            ["app/locale/pt_BR/PagarMe_Modal.csv", "app/locale/pt_BR/PagarMe_Modal.csv"],
            ["js/pagarme/*", "js/pagarme/"],
            ["skin/frontend/base/default/pagarme/*", "skin/frontend/base/default/pagarme/"]
        ]
    },
    "archive": {
        "exclude": [
            ".coveralls.yml",
            ".behat.yml",
            ".travis.yml",
            "Dockerfile",
            "forgotten_keys.sh",
            "LICENSE",
            "magentosmtp",
            "phpcsruleset.xml",
            "phpunit.xml",
            "start2",
            "README.md",
            "CHANGELOG.md",
            "PULLREQUEST-TEMPLATE.md",
            "ISSUE-TEMPLATE.md",
            "CONTRUBUTING.md",
            "docker-compose.yml",
            ".env",
            "tests/",
            "Makefile",
            "behat.yml",
            "CONTRIBUTING.md",
            ".gitignore",
            ".circleci/",
            "composer.json",
            "composer.lock",
            "script/",
            ".github/"
        ]
    }
}
